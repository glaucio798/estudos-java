package entities;

public class Product {

	public String name;
	public double price;
	public int quantity;

	public double TotalValueInStock() {
		return this.quantity * this.price;
	}

	public void AddProducts(int qnt) {
		this.quantity += qnt;
	}

	public void RemoveProducts(int qnt) {
		this.quantity -= qnt;
	}

	public void ImprimeDados() {
		System.out.printf("Dados: %s $ %.2f, %d unidades, Valor total: %.2f%n", name, price, quantity,
				TotalValueInStock());
	}
}
