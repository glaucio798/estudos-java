/*
 * Programa para fixação de conceitos
 * 
 * Sistema de banco para abrir conta, depositar e sacar
 * 
 * Desenvolvido por Gláucio Lima
 */

package application;

import java.util.Locale;
import java.util.Scanner;

import entities.ContaBancaria;

public class Program {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);

		System.out.print("----- Criar conta -----\n" + "Número da conta: ");
		int num = sc.nextInt();

		System.out.print("Nome do titular: ");
		String nome = sc.nextLine();

		System.out.print("Contem valor de entrada? (S/N) ");
		char entrada = sc.next().charAt(0);

		while (entrada != 'S' && entrada != 'N') {
			System.out.print("Opção inválida!\nContem valor de entrada? (S/N) ");
			entrada = sc.next().charAt(0);
		}

		double valor = 0;

		if (entrada == 'S')
			valor = sc.nextDouble();

		ContaBancaria conta = new ContaBancaria(num, nome, valor);
		
		
	}

}
